# _cleansrc _unpack _cdsrc _patch _conf _build _check
# _destin _postin _cleanpkg _checkin _makepkg
unset _conf _check _postin _makepkg

dep="bison flex"

_patch() {
patch -Np1 -i $sD/${PN}-build.patch ||fail
}

_destin() {
mkdir -pv $D/usr/s{bin,hare/man/man{5,8}}
cp -v fbset $D/usr/sbin ||exit
cp -v fbset.8 $D/usr/share/man/man8
cp -v fb.modes.5 $D/usr/share/man/man5
}
