# _cleansrc _unpack _cdsrc _patch _conf _build _check
# _destin _postin _cleanpkg _checkin _makepkg
unset _check _postin _makepkg

dep=""
adep="acl bzip2 expat libiconv attr openssl xz lzo nettle zlib"

_patch() {
patch -Np1 -i $sD/${PN}-CVE-2013-0211.patch ||fail CVE-2013-0211
libtoolize ||fail libtoolize
autoreconf -fi ||fail areconf
}

_conf() {
./configure \
  --prefix=/usr \
  --without-lzmadec \
  --disable-static \
  --disable-dependency-tracking
}
