# _cleansrc _unpack _cdsrc _patch _conf _build _check
# _destin _postin _cleanpkg _checkin _makepkg
unset _patch _check _postin _makepkg

dep="libXext libXft libXpm libXrandr libXrender xextprot"
adep="fribidi imlib2 freetype libXinerama gettext"

_conf() {
./configure \
  --prefix=/usr \
  --sysconfdir=/etc/X11/${PN} \
  --disable-dependency-tracking \
  --disable-nls
#--disable-fribidi
#--disable-timed-cache \
#--disable-remember \
#--disable-slit \
}
