# _cleansrc _unpack _cdsrc _patch _conf _build _check
# _destin _postin _cleanpkg _checkin _makepkg
unset _conf _check _makepkg

_patch() {
patch -Np1 -i $sD/${PN}-consolidated-1.patch ||fail
}

_build() {
make -C src ||fail make
}

_destin() {
make -C src ROOT=$D install ||fail destinst
}

_postin() {
# dead symlink
rm -f $D/usr/bin/lastb
cat > $D/$PKG_I/${PN}-${PKG_A}.in << "EOSH"
/sbin/telinit U &>/dev/null
EOSH
}
