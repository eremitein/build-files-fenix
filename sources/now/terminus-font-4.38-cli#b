# _cleansrc _unpack _cdsrc _patch _conf _build _check
# _destin _postin _cleanpkg _checkin _makepkg
unset _check _postin _makepkg

dep="gzip perl awk"
adep="bdftopcf"

_unpack() {
tar xf $sD/${PN/-cli}*.tar.* -C $rD ||fail unpack
mv -v $rD/${PN/-cli} $rD/$PN
}

_patch() {
patch -Np1 -i alt/ge2.diff ||fail ge2
#patch -Np1 -i alt/gq2.diff ||fail gq2
patch -Np1 -i alt/ll2.diff ||fail ll2
patch -Np1 -i alt/hi2.diff ||fail hi2
}

_conf() {
chmod +x ./configure
./configure \
  --prefix=/usr \
  --psfdir=/usr/share/consolefonts \
  --acmdir=/usr/share/consoletrans
}

_build() {
make psf txt ||fail make
}

_destin() {
make DESTDIR=$D install-psf install-acm ||fail destinst
}
