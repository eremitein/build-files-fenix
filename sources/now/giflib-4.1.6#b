# _cleansrc _unpack _cdsrc _patch _conf _build _check
# _destin _postin _cleanpkg _checkin _makepkg
unset _patch _check _postin _makepkg

adep="urt libX11"

_patch() {
patch -Np1 -i $sD/${PN}-gif2rle.patch ||fail gif2rle
patch -Np1 -i $sD/${PN}-giffix-null-Extension-fix.patch ||fail giffix
sed -i '/X_PRE_LIBS/s:-lSM -lICE::' configure ||fail sed
autoreconf -fi ||fail autoreconf
#libtoolize ||fail libtoolize
}

_conf() {
./configure \
  --prefix=/usr \
  --disable-gl \
  --disable-static
}
