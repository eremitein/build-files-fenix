# _cleansrc _unpack _cdsrc _patch _conf _build _check
# _destin _postin _cleanpkg _checkin _makepkg
unset _patch _check _postin _makepkg

dep="gmp"

_conf() {
./configure \
  --prefix=/usr \
  --libdir=/usr/lib \
  --enable-shared \
  --disable-openssl
}

_postin() {
# --disable-static build would break (since nettle 2.6)
rm -f $D/usr/lib/{libhogweed,libnettle}.a
}
