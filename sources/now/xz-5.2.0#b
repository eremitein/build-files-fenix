# _cleansrc _unpack _cdsrc _patch _conf _build _check
# _destin _postin _cleanpkg _checkin _makepkg
unset _patch _check _postin _makepkg

_conf() {
./configure \
  --prefix=/usr \
  --disable-nls \
  --docdir=/usr/share/doc/$PN
}

_postin() {
mkdir -pv $D/{bin,lib}
mv -v $D/usr/bin/{lzma,unlzma,lzcat,xz,unxz,xzcat} \
 $D/bin ||fail mv-bin
mv -v $D/usr/lib/liblzma.so.* $D/lib ||fail mv-lib
ln -svf ../../lib/$(readlink $D/usr/lib/liblzma.so) $D/usr/lib/liblzma.so
}
