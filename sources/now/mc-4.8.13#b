# _cleansrc _unpack _cdsrc _patch _conf _build _check
# _destin _postin _cleanpkg _checkin _makepkg
unset _check _makepkg

dep="ncurses glib pcre xz pkg-config"
adep="slang gpm samba unzip zip libX11 aspell libssh2 e2fsprogs"

_patch() {
patch -Np1 -i ${sD}/${PN}-tinfo.patch ||fail
autoreconf ||fail autoreconf
}
_conf() {
./configure \
  --prefix=/usr \
  --sysconfdir=/etc \
  --disable-dependency-tracking \
  --disable-nls \
  --enable-charset \
  --mandir=/usr/share/man \
  --localstatedir=/var \
  --with-screen=ncurses
 #--with-subshell=no
}

_postin() {
_doc AUTHORS doc/{README,NEWS,FAQ,HACKING,keybind-migration.txt}
chown root:tty $D/usr/libexec/mc/cons.saver ||fail chown
chmod g+s $D/usr/libexec/mc/cons.saver ||fail chmod
}
