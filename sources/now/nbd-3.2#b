# _cleansrc _unpack _cdsrc _patch _conf _build _check
# _destin _postin _cleanpkg _checkin _makepkg
unset _patch _check _checkin

_conf() {
./configure \
  --prefix=/usr \
  --sysconfdir=/etc \
  --enable-lfs \
  --enable-syslog \
  --disable-dependency-tracking
}

_postin() {
make -C gznbd ||fail gznbd
cp -v gznbd/gznbd $D/usr/bin

_doc README simple_test
}
