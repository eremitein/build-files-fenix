# _cleansrc _unpack _cdsrc _patch _conf _build _check
# _destin _postin _cleanpkg _checkin _makepkg
unset _check _postin _makepkg

_patch() {
cd nspr
sed -ri 's#^(RELEASE_BINS =).*#\1#' \
 pr/src/misc/Makefile.in ||fail sed-release
sed -i 's#$(LIBRARY) ##' config/rules.mk ||fail sed-lib
}

_conf() {
./configure \
  --prefix=/usr \
  --with-mozilla \
  --with-pthreads \
  $([ $(uname -m) = x86_64 ] && echo --enable-64bit)
}
