# _cleansrc _unpack _cdsrc _patch _conf _build _check
# _destinst _postinst _cleanpkg _checkinst _makepkg
unset _patch _check _postinst _makepkg

_conf() {
sed -i '/v0/{n;s/new:/new:kb=^?:/}' termcap ||fail sed-termcap
printf '\tkbs=\\177,\n' >> terminfo ||fail sed-terminfo

TERMINFO=/usr/share/terminfo \
./configure $XORG_CONFIG --enable-wide-chars \
  --with-app-defaults=/etc/X11/app-defaults
}

_postinst() {
make DESTDIR=$D install-ti
mkdir -pv $D/etc/X11/app-defaults
cat >> $D/etc/X11/app-defaults/XTerm << "EOF"
*VT100*locale: true
*VT100*faceName: Monospace
*VT100*faceSize: 14
*backarrowKeyIsErase: true
*ptyInitialErase: true
EOF
}
